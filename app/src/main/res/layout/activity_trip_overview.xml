<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".RouteOverviewActivity">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:padding="16dp"
    android:layout_marginTop="50dp"
android:background="@android:color/white">

<!-- Transport Mode Section -->
<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white"
    app:strokeWidth="1dp"
    app:strokeColor="@android:color/darker_gray"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_transport_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transport Mode"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_transport_mode_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The mode of transportation chosen for this trip."
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

<!-- ETA Section -->
<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white"
    app:strokeWidth="1dp"
    app:strokeColor="@android:color/darker_gray"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_eta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ETA"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_eta_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estimated time of arrival at your destination."
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

<!-- Fare Section -->
<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white"
    app:strokeWidth="1dp"
    app:strokeColor="@android:color/darker_gray"
    android:layout_marginBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_fare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fare"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_fare_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total fare for the selected trip."
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

<!-- Directions Description Section -->
<TextView
    android:id="@+id/tv_directions_desc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="1dp"/>

<!-- Directions Layout -->
<LinearLayout
    android:id="@+id/directions_layout"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="vertical"
    android:paddingTop="8dp"/>

<!-- Start Trip Button -->
<com.google.android.material.button.MaterialButton
    android:id="@+id/btn_start_trip"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:backgroundTint="@color/primaryDark"
    android:padding="12dp"
    android:text="Start Trip"
    android:textColor="@android:color/white"
    app:cornerRadius="16dp"
    app:iconGravity="textStart"
    app:iconPadding="8dp" />

</LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
